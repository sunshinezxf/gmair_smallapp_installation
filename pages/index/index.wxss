.menu_container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.menu_item {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    box-sizing: border-box;
    padding-bottom: 10rpx;
    padding-top: 10rpx;
    margin-bottom:20rpx;
}
.menu_icon {
    width: 54px;
    height: 54px;
    padding-bottom: 5rpx;
}
.line {
    height: 1rpx;
    width:100%;
    background:#aaa;
    margin-bottom:30rpx;
}
#panel1{
  height:16vh;
  background:#fff;
}
#panel1 text{
  line-height: 8vh;
}
.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: left;
  align-items: stretch;
}
.flex-cell{
  flex: 1;
}
.center{
  display: flex;
  justify-content: center;
}
.link{
  color: #00a0e8;
  border-bottom: 2rpx solid #00a0e8;
}