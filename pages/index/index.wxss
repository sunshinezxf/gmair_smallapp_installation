.menu_container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.menu_item {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    box-sizing: border-box;
    padding-bottom: 10rpx;
    padding-top: 10rpx;
    margin-bottom:20rpx;
}
.menu_icon {
    width: 54px;
    height: 54px;
    padding-bottom: 5rpx;
}
.line {
    height: 1rpx;
    width:100%;
    background:#aaa;
    margin-bottom:30rpx;
}
